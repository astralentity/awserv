<h1>Astral Wolf's Blog</h1>
<div class="row">
	<div class="col-md-12">
		<%= link_to "New Entry", new_blog_path, :class => "btn btn-primary" %>
	</div>
</div>
<br />	
<div class="col-md-9">
  <% @blogs.each do |blog| %>
    <div class="panel panel-default">
        <div class="panel-heading"><h4><%= blog.title %></h4></div>
        <div class="panel-body"><%= blog.body.truncate(80, separator: ' ').html_safe %></div>
	<div class="panel-footer">
          <%= link_to 'Show', blog, :class => "btn btn-primary" %>
          <%= link_to 'Edit', edit_blog_path(blog), :class => "btn btn-primary" %>
          <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
	  <b>Created:</b> <%= blog.created_at.to_time %>
        </div>
    </div>
  <% end %>
</div>
<div class="col-md-3">
	<div class="panel panel-default">
		<div class="panel-heading"><h5>Tag cloud</h5></div>
		<div class="panel-body"></div>
		<% tag_cloud(@tags, %w(css1, css2, css3, css4)) do |tag, css_class| %>
		  <%= link_to tag.name, tag_path(tag.name), :class => css_class %>
		<% end %>
	</div>
</div>

