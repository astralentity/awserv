<!DOCTYPE html>
<html>
<head>
  <title><%= @meta[:title] %></title>
  <meta charset="UTF-8">

  <%= render partial: 'blogo/shared/meta' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        
  <%= javascript_include_tag 'https://js.stripe.com/v2' %>

  <%= stylesheet_link_tag "blogo/blog" %>
  <%= csrf_meta_tags %>

  <%= auto_discovery_link_tag :atom, blogo_feed_path %>
  <%= render 'blogo/shared/google_analytics' %>
</head>
<body style="margin-top: 50px;">
  <%= render 'shared/navigation_bar' %>
    <div id="content">
      <div class="pure-g-r">
        <div class="pure-u-3-4">
          <%= yield %>
        </div>

        <div class="pure-u-1-4">
          <%= render partial: 'blogo/shared/aside' %>
        </div>
      </div>

      <div class="pure-g-r">
        <div class="pure-u-1-1">
          <%= link_to "Powered by Blogo", Blogo::HOME_PAGE_URL, class: "powered-by" %>
        </div>
      </div>
    </div>

</body>
</html>
